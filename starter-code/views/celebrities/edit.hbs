<h2> Edit Celebrity</h2>

<form action="/celebrities/edit/{{this._id}}" method="POST">
  <label for="celebrity-name">Name:</label>
  <input type="text" name="name" id="celebrity-name" value="{{this.name}}">

  <label for="celebrity-occupation">Occupation:</label>
  <input type="text" name="occupation" id="celebrity-occupation" value="{{this.occupation}}">

  <label for="celebrity-catchPhrase">Catch Phrase:</label>
  <input type="text" name="catchPhrase" id="celebrity-catchPhrase" value="{{this.catchPhrase}}">

  <input type="submit" value="save" >
</form>